page{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.header{
  display: flex;
  justify-content: center;
}
.header>image{
  width: 300rpx;
  height: 300rpx;
}
.form{
  margin-top: 40rpx;
}
.form .tip{
  margin-left: 30rpx;
  color: #ccc;
}
.weui-vcode-btn{
  font-size: 28rpx;
}
.disable{
  color: #ccc;
  pointer-events: none;
}
.weui-cell_vcode {
  margin: 0 30rpx;
  border-bottom: 1rpx solid #d9d9d9;
}
.weui-cell:before{
  border-top: 0;
}
.weui-btn{
  margin-bottom: 30rpx;
}