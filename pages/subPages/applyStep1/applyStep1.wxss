page {
  position: relative;
  background-color: #f4f4f4;
}

.iconfont.icon_bitian {
  color: red;
}

.weui-cell__hd.transparent_view {
  padding-left: 48rpx;
}

.weui-cell__hd_in-select-after,
.weui-cell__bd_in-select-before {
  display: flex;
  align-items: center;
}

.address {
  width: 410rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 文字隐藏后添加省略号 */
  white-space: nowrap;
  /* 强制不换行*/
}

.transparent {
  height: 130rpx;
  background-color: #fff;
}

.category {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  font-size: 28rpx;
  line-height: 34rpx;
}

.category text {
  margin: auto 0;
}

/* 图片删除图标 */
.iconImg{
  width: 150rpx;
  height: 150rpx;
  position: relative;
}
.iconfont.icondel{
  position: absolute;
  top: 0;
  right: 0;
  z-index: 10;
  font-size: 30rpx;
  color: red;
  font-weight: bold;
  transform: translate(22px,-5px);
}

.footer {
  width: 100vw;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
  padding: 20rpx 0;
  background-color: #fff;
  box-shadow: 0px -3px 5px #C7C7C7;
}

.footer>.weui-btn {
  width: 90vw;
}

.menu-item {
  padding: 20rpx;
  padding-left: 0;
  background-color: #fff;
  margin-top: 40rpx;
  box-sizing: border-box;
}

.weui-select {
  border-right: none;
}

.nonEssentail {
  font-size: 24rpx;
}

.menu-item-title>.example {
  float: right;
  color: #07c160;
}

/* 遮罩层 */
.mask {
  display: none;
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  background-color: rgba(79, 75, 75, 0.5);
}
.mask.show{
  display: block;
}

.toast {
  width: 80vw;
  height: 48vh;
  position: fixed;
  z-index: 101;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -40%);
  /* background-color: salmon; */
  box-sizing: border-box;
}

.toast_content {
  height: 40vh;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.toast_item{
  text-align: left;
  font-size: 24rpx;
  color: rgb(182, 182, 182);
}
.toast_content>image{
  width: 70vw;
  height: 60vh;
  margin-top: 20rpx;
}
.toast_title{
  font-weight: bold;
  font-size: 28rpx;
  text-align: left;
}

.toast_cancel {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 8vh;
  /* background-color: sienna; */
}

.toast_cancel>.iconfont.iconguanbi {
  font-size: 70rpx;
  margin: 0 auto;
  color: #fff;
}