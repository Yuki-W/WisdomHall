<view>
	<!-- 图片上传 -->
	<view class="weui-cell weui-cell_input">
		<view class="weui-cell__hd">
			<view class="weui-label">图片上传</view>
		</view>
		<block wx:if="{{files.length===0}}">
			<view class="weui-uploader__input-box">
				<view class="weui-uploader__input" bindtap="chooseImage"></view>
	</view>
		</block>
		<block wx:else>
			<view class="weui-uploader__file" bindtap="previewImage">
				<image class="weui-uploader__img" src="{{files[0]}}" mode="aspectFill" />
			</view>
		</block>
</view>
<!-- 菜品名称 -->
<view class="weui-cell weui-cell_input">
	<view class="weui-cell__hd">
		<view class="weui-label">菜品名称</view>
	</view>
	<view class="weui-cell__bd">
		<input class="weui-input" value="{{food_name}}" placeholder="请输入菜品名称" bindinput="nameHandle" />
	</view>
</view>
<!-- 菜品分类 -->
<view class="weui-cell weui-cell_select">
	<view class="weui-cell__hd weui-cell__hd_in-select-after">
		<view class="weui-label">菜品类别</view>
	</view>
	<view class="weui-cell__bd">
		<picker bindchange="bindCountryChange" value="{{curIndex}}" range="{{nameList}}">
			<view class="weui-select weui-select_in-select-after">{{nameList[curIndex]}}</view>
		</picker>
	</view>
</view>
