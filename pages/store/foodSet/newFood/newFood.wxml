<!-- 菜品价格 -->
<view class="weui-cell weui-cell_input">
	<view class="weui-cell__hd">
		<view class="weui-label">菜品价格</view>
	</view>
	<view class="weui-cell__bd">
		<input class="weui-input" value="{{food_price}}" placeholder="请填写菜品价格（单位:元）" bindinput="priceHandle" />
	</view>
</view>

<!-- 原价 -->
<view class="weui-cells weui-cells_after-title">
	<view class="weui-cell weui-cell_switch set_price">
		<view class="weui-label" style="color:{{!checkStatus?'#ccc':'none'}}">原价</view>
		<view>
			<input type="text" value="{{!checkStatus?'':old_price}}" disabled="{{!checkStatus}}" placeholder="{{!checkStatus?'未设置':'请设置原价（单位:元）'}}" placeholder-style="color:{{!checkStatus?'#ccc':'none'}}" bindinput="oldPriHandle" />
		</view>
		<view class="weui-cell__ft">
			<switch data-type="price" bindchange="switChange" />
		</view>
	</view>
</view>

<view class="footer">
	<button bindtap="submit">提交</button>
</view>
</view>