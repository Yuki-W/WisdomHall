.list-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
  margin: 0 20rpx;
  align-items: center;
}
.iconfont{
  font-size: 40rpx;
  color: #ff9c35;
  margin: 0 20rpx;
}
.translate{
  height: 120rpx;
  background-color: transparent;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  background: #fff;
  padding: 20rpx 0;
  z-index: 99;
}

/* 弹出框区域设置 */
.masking.hide{
  display: none;
}
.masking{
  display: block;
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  background-color: rgba(79, 75, 75, 0.5);
}
.masking .toast{
  width: 60vw;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  border-radius: 30rpx;
  position: fixed;
  top: 25%;
  left: 20vw;
  transform: translateX(-75%,-75%);
  overflow: hidden;
}
.toast .toast-header{
  height: 100rpx;
  line-height: 80rpx;
  background-color: rgb(106, 176, 197);
  padding: 10rpx 20rpx;
  color: #fff;
  box-sizing: border-box;
}
.toast>input[type="text"]{
  height: 100rpx;
  margin-left: 20rpx;
}
.toast-bottom{
  border-top: 1px solid #ccc;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.toast-bottom>text{
  flex: 1;
  text-align: center;
}
.toast-bottom>.cancel{
  color: red;
  border-right: 2rpx solid #ccc;
}