.menu{
  margin-top: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f4f4f4;
}
.picker_right{
  display: flex;
  flex-direction: column;
}
.ft_content{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.ft_content>view{
  width: 80rpx;
  text-align: center;
}
.ft_content>picker{
  flex:1;
  width: 200rpx;
  text-align: center;
}
.transparent{
  background-color: transparent;
  height: 130rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  z-index: 99;
  padding: 20rpx 0;
  background-color: #fff;
  box-shadow: 0px -3px 5px #C7C7C7;
}
.footer>button{
  width: 90vw;
  /* margin: 20rpx; */
}