<view class="menu">
	<view class="weui-cell weui-cell_input">
		<view class="weui-cell__hd">
			<view class="weui-label">店铺名称</view>
		</view>
		<view class="weui-cell__bd">
			<input class="weui-input" placeholder="{{shop.shopName}}" disabled />
		</view>
	</view>
</view>
<!-- 营业状态 -->
<view class="menu">
	<view class="weui-cell weui-cell_switch">
		<view class="weui-cell__bd">营业状态</view>
		<view class="weui-cell__ft">
			{{status?'营业中':'休息中'}}
			<switch checked="{{status}}" data-type="status" bindtap="switch" />
		</view>
	</view>
</view>

<!-- 经营时间 -->
<view class="menu">
	<view class="weui-cell">
		<view class="weui-label">经营时间</view>
		<view class="weui-cell__ft picker_right">
			<view class="ft_content">
				<picker data-timer="0" bindchange="bindPickerChange" value="{{startDay}}" range="{{array}}">
					<view class="weui-input">{{startDay}}</view>
				</picker>
				<view>--</view>
				<picker data-timer="1" bindchange="bindPickerChange" value="{{endDay}}" range="{{array}}">
					<view class="weui-input">{{endDay}}</view>
				</picker>
			</view>
			<view class="ft_content">
				<picker mode="time" value="{{time}}" start="09:01" end="21:01" data-timer="0" bindchange="bindTimeChange">
					<view class="weui-input">{{startTime}}</view>
				</picker>
				<view>--</view>
				<picker mode="time" value="{{time}}" start="09:01" end="21:01" data-timer="1" bindchange="bindTimeChange">
					<view class="weui-input">{{endTime}}</view>
				</picker>
			</view>
		</view>
	</view>
</view>

<!-- 人均价位 -->
<view class="menu">
	<view class="weui-cell weui-cell_input">
		<view class="weui-cell__hd">
			<view class="weui-label">人均价位</view>
			<text>（元/位）</text>
		</view>
		<view class="weui-cell__bd">
			<input data-type="price" bindblur="handle" class="weui-input" placeholder="请输入参考价格" value="{{price}}"/>
		</view>
	</view>
</view>
<!-- 是否支持预约 -->
<view class="menu">
	<view class="weui-cell weui-cell_switch">
		<view class="weui-cell__bd">预约支持</view>
		<view class="weui-cell__ft">
			{{reserve?'是':'否'}}
			<switch checked="{{reserve}}" data-type="reserve" bindtap="switch" />
		</view>
	</view>
</view>
<!-- 特色介绍 -->
<view class="menu">
	<view class="weui-cell weui-cell_input">
		<view class="weui-cell__hd">
			<view class="weui-label">餐厅介绍</view>
		</view>
		<view class="weui-cell__bd">
			<textarea class="weui-textarea" data-type="introduct" bindinput="handle" placeholder="您可以在这里输入对餐厅的介绍" value="{{introduct}}" style="height: 6em" maxlength="200" />
			<view class="weui-textarea-counter">{{introduct.length}}/200</view>
		</view>
	</view>
</view>
<view class="transparent"></view>
<view class="footer">
	<button class="weui-btn" type="primary" bindtap="submit">确定</button>
</view>